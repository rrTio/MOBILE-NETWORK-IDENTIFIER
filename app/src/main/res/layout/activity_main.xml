<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#858b97"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:id="@+id/topLayer"
            android:layout_width="1080px"
            android:layout_height="1470px"
            android:layout_alignParentTop="true">



        <TextView android:id="@+id/lblName"
                  android:text="MOBILE NETWORK IDENTIFIER"
                  android:textColor="#000000"
                  android:textSize="90px"
                  android:fontFamily="@font/ubuntu_bold"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="80dp"
                  android:gravity="center"
        />

        <ImageView android:id="@+id/viewNetwork"

                   android:layout_width="220dp"
                   android:layout_height="220dp"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/nosign"
                   android:layout_alignParentBottom="true"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="60dp"
        />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/bottomLayer"
                    android:layout_width="1080px"
                    android:layout_height="870px"
                    android:layout_alignParentBottom="true">

        <TextView android:id="@+id/lblNetwork"
                  android:text="INPUT YOUR MOBILE NUMBER"
                  android:textColor="#000000"
                  android:textSize="65px"
                  android:fontFamily="@font/ubuntu"
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentTop="true"
                  android:gravity="center"
        />

        <EditText
                android:id="@+id/txtInput"
                android:textColor="#000000"
                android:fontFamily="@font/ubuntu"
                android:textSize="17dp"
                android:background="@drawable/rounded_cornertxtinput"
                android:hint="NUMBER HERE"
                android:textColorHint="#000000"
                android:maxLength="5"
                android:inputType="number"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:paddingLeft="10dp"
        />

        <ImageButton android:id="@+id/btnClear"
                     android:src="@drawable/eraser"
                     android:scaleX="1"
                     android:scaleY="1"
                     android:background="@drawable/rounded_cornersclear"
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:layout_toRightOf="@id/txtInput"
                     android:layout_marginTop="80dp"
                     android:layout_marginLeft="10dp"
        />

        <Button android:id="@+id/btnIdentify"
                android:text="IDENTIFY"
                android:textSize="25dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#000000"
                android:background="@drawable/rounded_cornersidentify"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_below="@id/txtInput"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
        />

    </RelativeLayout>

</RelativeLayout>
